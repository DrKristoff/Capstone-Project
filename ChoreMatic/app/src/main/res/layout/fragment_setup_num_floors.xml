<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sidegigapps.chorematic.activities.SetupActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:text="Number of Floors?"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="400dp">

        <TextView
            android:id="@+id/numFloorsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/num_floors_label" />

        <ImageButton
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/numFloorsLabel"
            android:src="@drawable/ic_remove_circle_black_24dp"/>

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/numFloorsLabel"
            android:src="@drawable/ic_add_circle_black_24dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/homeImageLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_above="@+id/back_button"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/imageViewRoof"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:src="@drawable/roof"/>

        <ImageButton
            android:id="@+id/floor0"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:layout_toStartOf="@+id/numFloorsLabel"
            android:src="@drawable/floor"/>

    </LinearLayout>

    <TextView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:text="BACK"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:text="NEXT"
        android:textSize="36sp" />


</RelativeLayout>
